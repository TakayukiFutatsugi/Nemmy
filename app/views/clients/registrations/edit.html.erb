<h2>プロフィール編集</h2>
</br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "clients/shared/error_messages", resource: resource %>
  <div class="ui form">
    <div class="field">
      <%= f.label :会社名 %>
      <%= f.text_field :name %>
      (50文字まで)
    </div>
      
    <div class="field">
      <%= f.label :会社ホームページ %>
      <%= f.text_field :homepage %>
    </div>
    
    <div class="two fields">
      <div class="field">
        <%= f.label :業界 %>
        <%= f.text_field :industry %>
        (50文字まで)
      </div>
      <div class="field">
        <%= f.label :事業内容 %>
        <%= f.text_field :business %>
        (50文字まで)
      </div>
    </div>
    
    <div class="two fields">
      <div class="field">
        <%= f.label :従業員数 %>
        <%= f.text_field :staff %>
        (50文字まで)
      </div>
      <div class="field">
        <%= f.label :本社所在地 %>
        <%= f.text_field :address %>
        (50文字まで)
      </div>
    </div>
    
    <div class="field">
      <%= f.label :会社紹介 %>
      <%= f.text_area :introduction %>
      (1000文字まで)
    </div>
    
    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>
    
    <div class="two fields">
      <div class="field">
        <%= f.label :パスワード %> (変更の必要がなければ空白のままで問題ございません)
        <% if @minimum_password_length %>
          <%= @minimum_password_length %> 文字以上
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field">
        <%= f.label :新しいパスワード確認 %> (左のパスワードをもう一度入力してください)
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>  
  
    <div class="field">
      <%= f.label :現在のパスワード %> (変更を確定するために現在のパスワードを入力してください)
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "変更を保存", class:"ui blue button right floated" %>
    </div>
  </div>
<% end %>


</br>
</br>
</br>

<h3>アカウントの削除</h3>

<p><%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "削除してよろしいですか?" }, method: :delete, class:"ui blue button" %></p>